global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms
    retries 3

frontend http_front
    bind *:{{ haproxy_frontend_port }}
    default_backend http_back

backend http_back
    balance sticky
    option httpchk GET {{ haproxy_health_check_path }}
    {% for server in haproxy_backend_servers %}
    server {{ server.name }} {{ server.ip }}:{{ server.port }} check inter {{ haproxy_health_check_interval }}
    {% endfor %}